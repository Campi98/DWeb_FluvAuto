@model FluvAuto.Models.FuncionariosMarcacoes

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar serviço</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasGastas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasGastas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comentarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentarios)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicioServico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicioServico)
        </dd>
        <dt class = "col-sm-2">
            Marcação
        </dt>
        <dd class = "col-sm-10">
            @(Model.Marcacao?.Servico ?? "-")
        </dd>
        <dt class = "col-sm-2">
            Funcionário
        </dt>
        <dd class = "col-sm-10">
            @(Model.Funcionario?.Email ?? "-")
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-marcacaoId="@Model.MarcacaoFK" asp-route-funcionarioId="@Model.FuncionarioFK">
        <input type="hidden" asp-for="MarcacaoFK" />
        <input type="hidden" asp-for="FuncionarioFK" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
