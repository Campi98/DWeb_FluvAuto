<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FluvAuto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FluvAuto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/mechanic.png" alt="Mecânico" style="height:32px; width:auto; margin-right:8px;" />
                    FluvAuto
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Início - visível para todos -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Index">Início</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("admin"))
                            {
                                <!-- Admin vê tudo -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Clientes"
                                        asp-action="Index">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Funcionarios"
                                        asp-action="Index">Funcionários</a>
                                </li>
                            }

                            <!-- Viaturas, Marcações e Serviços - visíveis para todos os utilizadores autenticados -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Viaturas"
                                    asp-action="Index">Viaturas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Marcacoes"
                                    asp-action="Index">Marcações</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="FuncionariosMarcacoes"
                                    asp-action="Index">Serviços</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UserPage">Página
                                    de Utilizador</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footer-bg">
        <div class="d-flex align-items-center justify-content-between py-0 ps-3 pe-3" style="gap: 1.5rem;">
            <div class="d-flex align-items-center" style="gap: 1.5rem;">
                <div class="footer-title m-0">Oficinas Flúvio</div>
                <div class="footer-subtitle m-0">Reparações e Revisões</div>
            </div>
            <a asp-area="" asp-controller="Home" asp-action="About" class="footer-link">Sobre a App</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

