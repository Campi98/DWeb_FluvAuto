@model FluvAuto.Models.FuncionariosMarcacoes

@{
    ViewData["Title"] = "Details";
    var isAdminOrFuncionario = User.IsInRole("admin") || User.IsInRole("funcionario");
}

<h1>Details</h1>

<div>
    <h4>FuncionariosMarcacoes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasGastas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasGastas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comentarios)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentarios)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicioServico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicioServico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marcacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marcacao.Servico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Funcionario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Funcionario.Email)
        </dd>
        <dt class = "col-sm-2">
            Viatura
        </dt>
        <dd class = "col-sm-10">
            @(Model.Marcacao?.Viatura != null ? ($"{Model.Marcacao.Viatura.Marca} {Model.Marcacao.Viatura.Modelo} - {Model.Marcacao.Viatura.Matricula}") : "-")
        </dd>
        @if (isAdminOrFuncionario)
        {
            <dt class = "col-sm-2">
                Cliente
            </dt>
            <dd class = "col-sm-10">
                @Html.Raw((Model.Marcacao?.Viatura?.Cliente?.Nome ?? "-") + "<br />" + (Model.Marcacao?.Viatura?.Cliente?.Telefone ?? "-"))
            </dd>
        }
    </dl>
</div>
<div>
    @if (isAdminOrFuncionario)
    {
        @Html.ActionLink("Edit", "Edit", new { marcacaoId = Model.MarcacaoFK, funcionarioId = Model.FuncionarioFK })
        @: |
    }
    <a asp-action="Index">Back to List</a>
</div>
