@model FluvAuto.Models.Marcacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar marcação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MarcacaoId" />
            <div class="form-group">
                <label asp-for="DataMarcacaoFeita" class="control-label"></label>
                <input asp-for="DataMarcacaoFeita" class="form-control" />
                <span asp-validation-for="DataMarcacaoFeita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaInicioServico" class="control-label"></label>
                <input asp-for="DataPrevistaInicioServico" class="form-control" />
                <span asp-validation-for="DataPrevistaInicioServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFimServico" class="control-label"></label>
                <input asp-for="DataFimServico" class="form-control" />
                <span asp-validation-for="DataFimServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servico" class="control-label"></label>
                <input asp-for="Servico" class="form-control" />
                <span asp-validation-for="Servico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label"></label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="">-- Selecione o estado --</option>
                    <option value="Agendada">Agendada</option>
                    <option value="Em Progresso">Em Progresso</option>
                    <option value="Concluída">Concluída</option>
                    <option value="Cancelada">Cancelada</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ViaturaFK" class="control-label"></label>
                <select asp-for="ViaturaFK" class="form-control" asp-items="ViewBag.ViaturaFK"></select>
                <span asp-validation-for="ViaturaFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
