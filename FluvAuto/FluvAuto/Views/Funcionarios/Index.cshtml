@model IEnumerable<FluvAuto.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Funcionários</h1>

<p>
    <a asp-action="Create">Adicionar Funcionário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotografia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Morada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodPostal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Funcao)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Fotografia))
                {
                    <img src="@item.Fotografia" alt="Foto" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" />
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Morada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodPostal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UtilizadorId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UtilizadorId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.UtilizadorId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
